---
# =============================================================================
# Wazuh All-in-One Configuration Variables
# Generated by soc-in-a-box ansible role
# =============================================================================

# Single node deployment
single_node: true

# Wazuh Indexer Configuration
indexer_network_host: "{{ wazuh_indexer_network_host }}"
indexer_cluster_name: "wazuh-cluster"
indexer_node_name: "{{ wazuh_indexer_node_name }}"
indexer_http_port: 9200
indexer_jvm_xms: "{{ wazuh_indexer_jvm_xms }}"
indexer_jvm_xmx: "{{ wazuh_indexer_jvm_xmx }}"

# Wazuh Dashboard Configuration
dashboard_server_host: "{{ wazuh_dashboard_server_host }}"
dashboard_server_port: {{ wazuh_dashboard_server_port }}

# Filebeat Configuration
filebeat_output_indexer_hosts:
{% for host in wazuh_filebeat_indexer_hosts %}
  - "{{ host }}"
{% endfor %}

# Instances definition for certificates
instances:
  indexer:
    name: "{{ wazuh_indexer_node_name }}"
    ip: "127.0.0.1"
    role: indexer
  manager:
    name: "{{ wazuh_manager_node_name }}"
    ip: "127.0.0.1"
    role: wazuh
  dashboard:
    name: "{{ wazuh_dashboard_node_name }}"
    ip: "127.0.0.1"
    role: dashboard

# Wazuh Manager API Configuration
wazuh_manager_api:
  bind_addr: "{{ wazuh_api_bind_addr }}"
  port: {{ wazuh_api_port }}
  https: {{ wazuh_api_https | lower }}
  https_key: "/var/ossec/api/configuration/ssl/server.key"
  https_cert: "/var/ossec/api/configuration/ssl/server.crt"
